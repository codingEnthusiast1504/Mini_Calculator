INPUT
#include<iostream>
using namespace std;
class student
{  public:
   int roll_no;
   char name[20];
   void putdata()
       {
         cout<<"enter the value of roll no:"<<endl;
         cin>>roll_no;
         cout<<"enter the name:"<<endl;
         cin>>name;
       }
       void getdata()
       {
         cout<<"roll no is:"<<roll_no<<endl;
         cout<<"Your name is:"<<name<<endl;
       }
};
   int main()
    { student s[4];
      int i;
      for(i=0;i<4;i++)
      { s[i].putdata();
      }
      for(i=0;i<4;i++)
      {
      s[i].getdata();
      }
    return 0;
}

